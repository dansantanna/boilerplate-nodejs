{
  "swagger": "2.0",
  "info": {
    "description": "This is the API documentation..",
    "version": "1.0.0",
    "title": "Boilerplate",
    "contact": { "email": "danielcarlossantanna@gmail.com" }
  },
  "basePath": "/v1",
  "tags": [
    {
      "name": "user",
      "description": "Operations about user"
    },
    {
      "name": "auth",
      "description": "Operations about authentication"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/user": {
      "post": {
        "tags": ["user"],
        "summary": "Create user",
        "description": "Create a new user to log in.",
        "operationId": "createUser",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": { "$ref": "#/definitions/User" }
          }
        ],
        "responses": {
          "201": {
            "description": "User object created",
            "schema": { "$ref": "#/definitions/User" }
          },
          "400": {
            "description": "Error response",
            "schema": { "$ref": "#/definitions/Response" }
          }
        }
      }
    },
    "/auth/token": {
      "post": {
        "tags": ["auth"],
        "summary": "Get token",
        "description": "Authentication user.",
        "operationId": "authUser",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" },
                "password": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "User object with token" },
          "401": { "description": "Error response" }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "password": { "type": "string" },
        "createdAt": { "type": "string" }
      },
      "additionalProperties": {}
    },
    "Response": {
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "message": { "type": "string" }
      }
    }
  }
}
